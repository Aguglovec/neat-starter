<div class="absolute flex flex-col items-start justify-center h-full {{ post.data.heroSettings.headingTextColor or 'text-white' }} {{ structure.g_pageWidth }}">
  <div class="text-4xl font-semibold leading-tight {{ post.data.heroSettings.headingTextCase }} md:text-6xl">
    {{ post.data.heroSettings.headingText | safe  }}
  </div>
  <div class="pt-4 pr-12 text-lg font-light md:text-2xl lg:text-3xl {{ post.data.heroSettings.subheadingTextColor }}">
    {{ post.data.heroSettings.subheadingText | safe }}
  </div>
  {% if post.data.heroSettings.buttonText %}
    <div class="w-full mt-12 ">
      <a href="{{ post.data.heroSettings.buttonURL }}" class="p-4 rounded-lg {{ post.data.heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ post.data.heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} hover:{{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} hover:{{ post.data.heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ post.data.heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{{ post.data.heroSettings.buttonText }}</a>
    </div>
  {% endif %}
</div>